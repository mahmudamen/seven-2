<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="right|center_horizontal|center_vertical"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context="com.newaswan.seven.SinginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:src="@drawable/lasticon" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layoutDirection="rtl"
            android:text="تسجيل عميل جديد"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="4">

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="right"
                android:layout_margin="1dp"
                android:hint="بريدك الالكتروني  هنا .."
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="right"
                android:layout_margin="1dp"
                android:hint="كلمة السر"
                android:inputType="textPassword" />
        </GridLayout>
        <Button
            android:id="@+id/buttonSignup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:layoutDirection="rtl"
            android:text="تسجيل الدخول " />
        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />
    </LinearLayout>
    <EditText
        android:visibility="invisible"
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/editID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:inputType="number" />

    <EditText
        android:id="@+id/editLand"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"/>
</RelativeLayout>