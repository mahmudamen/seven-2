<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="right|center_horizontal|center_vertical"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context="com.newaswan.seven.SinginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:src="@drawable/lasticon" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layoutDirection="rtl"
            android:text="تسجيل عميل جديد"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="4">

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="right"
                android:layout_margin="1dp"
                android:hint="بريدك الالكتروني  هنا .."
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="right"
                android:layout_margin="1dp"
                android:hint="كلمة السر"
                android:inputType="textPassword" />
        </GridLayout>

        <Button
            android:id="@+id/buttonSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:layoutDirection="rtl"
            android:text="تسجيل " />

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:textColor="#FFFFFF"
            android:gravity="center|center_vertical"
            android:text="Sign In"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:enabled="true"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/revoke_access_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revoke Access"
            android:enabled="true"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/sign_in_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:text="" />
        <TextView
            android:id="@+id/textViewSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="لدي حساب بالفعل ؟ سجل الدخول من هنا "
            android:textAlignment="center" />

    </LinearLayout>

</RelativeLayout>