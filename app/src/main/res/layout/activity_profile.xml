<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="2dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context="com.newaswan.seven.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:src="@drawable/lasticon" />

        <TextView
            android:id="@+id/textViewUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />




        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewUserEmail"
            android:layout_margin="5dp"
            android:text="تسجيل الخروج" />

        <Button
            android:id="@+id/contnue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewUserEmail"
            android:layout_margin="5dp"
            android:text="استمرار" />

        <TextView
            android:id="@+id/textViewSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="للتمتع بخدمات التطبيق برجاء استمرار تسجيل الدخول"
            android:textAlignment="center" />
    </LinearLayout>

</RelativeLayout>